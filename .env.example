# TeamIO Environment Variables Template
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL=postgresql://username:password@host:port/database

# Authentication Configuration
ISSUER_URL=https://your-auth-provider.com
SESSION_SECRET=your-very-secure-session-secret-key-here

# Application Settings
NODE_ENV=development
PORT=5000

# Security Settings
ALLOWED_DOMAINS=localhost:3000,localhost:5000
REPLIT_DOMAINS=your-repl-domain.replit.app

# Rate Limiting (optional)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Request Settings (optional)
REQUEST_TIMEOUT_MS=30000
MAX_REQUEST_SIZE_BYTES=10485760

# Logging (optional)
LOG_LEVEL=info

# External Services (if needed)
# OPENAI_API_KEY=your-openai-api-key
# STRIPE_SECRET_KEY=your-stripe-secret-key
# SMTP_HOST=your-smtp-host
# SMTP_USER=your-smtp-user
# SMTP_PASS=your-smtp-password