# TeamIO Environment Variables Template
# Copy this file to .env and fill in your values

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/teamio

# Authentication
ISSUER_URL=https://your-auth-provider.com
SESSION_SECRET=your-very-secure-session-secret-key-here

# Application Settings
NODE_ENV=development
PORT=5000
ALLOWED_DOMAINS=localhost:3000,localhost:5000

# Optional: Security Settings
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
REQUEST_TIMEOUT_MS=30000
MAX_REQUEST_SIZE_BYTES=10485760

# Optional: Monitoring and Logging
LOG_LEVEL=info
ENABLE_API_DOCS=true

# Optional: Email Configuration (for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@example.com
EMAIL_PASS=your-app-specific-password

# Optional: External Services
# Add your external API keys here as needed
# EXTERNAL_API_KEY=your-api-key-here